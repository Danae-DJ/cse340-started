<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect("/") } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="message warning">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<div id="registerContainer">
  <p><strong>Confirm Deletion:</strong> The delete is permanent.</p>

  <form action="/inv/delete" method="post" id="deleteForm">
    <fieldset>

      <label for="invMake">Make</label>
      <input type="text" readonly value="<%= inv_make %>">
      <br>

      <label for="invModel">Model</label>
      <input type="text" readonly value="<%= inv_model %>">
      <br>

      <label for="invPrice">Price</label>
      <input type="text" readonly value="<%= inv_price %>">
      <br>

      <label for="invYear">Year</label>
      <input type="text" readonly value="<%= inv_year %>">
      <br>

      <input type="hidden" name="inv_id" value="<%= inv_id %>">

      <button type="submit">Delete Vehicle</button>

    </fieldset>
  </form>
</div>
