<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>

<div id="registerContainer">
    <p>All fields are required.</p>
    <form id="registerForm" action="/account/register" method="post">
        <fieldset>
            <label for="firstname">First name:</label>
            <input type="text"  name="account_firstname" id="firstname" size="10" required value="<%= locals.account_firstname %>">
            
            <label for="lastname">Last name:</label>
            <input type="text" name="account_lastname" id="lastname" required value="<%= locals.account_lastname %>">

            <label for="email">Email Address:</label>
            <input type="email" name="account_email" id="email" required value="<%= locals.account_email %>"
                placeholder="Enter a valid email addres">

            <label for="password">Password:</label>
            <input type="password" name="account_password" id="password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            <div><span>Passwords must be minimum of 12 characters and include 1 capital letter, 1
                    number and 1 special
                    character.</span></div>

            <label for="account_type">Chose your type of account:</label>
            <select id="account_type" name="account_type" required>
                <option value="Client" <%=locals.account_type==="Client" ? "selected" : "" %>>Client</option>
                <option value="Employee" <%=locals.account_type==="Employee" ? "selected" : "" %>>Employee</option>
                <option value="Admin" <%=locals.account_type==="Admin" ? "selected" : "" %>>Admin</option>
            </select>

            <div id="pswdBtn">Show Password</div>
            <button type="submit">Register</button>
        </fieldset>
    </form>
</div>
<script src="/js/script.js"></script>



<!--Show password button-->
<script>
    const pswdBtn = document.getElementById("pswdBtn");
    const pswdInput = document.querySelector("input[type='password']");

    pswdBtn.addEventListener("click", () => {
        if (pswdInput.type === "password") {
            pswdInput.type = "text";
            pswdBtn.textContent = "Hide Password";
        } else {
            pswdInput.type = "password";
            pswdBtn.textContent = "Show Password";
        }
    });
</script>

